# Configs
config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize
config secondsBetweenRepeat 0.1
config checkDefaultsOnLoad true
config focusCheckWidthMax 3000
config windowHintsShowIcons true
config windowHintsIgnoreHiddenWindows false
#config windowHintsDuration 5
config windowHintsSpread true
#config windowHintsOrder persist

# Monitor Aliases
alias mon-laptop         0
alias mon-external-1     1
alias mon-external-2     2

# Misc Aliases
alias showNormalHint hint ASDFGHJKLQWERTYUIOPCVBN

# App Aliases
alias browser 'Google Chrome'
alias editor  'Sublime Text'

# Abstract positions
alias full          move screenOriginX;screenOriginY                  screenSizeX;screenSizeY
alias lefthalf      move screenOriginX;screenOriginY                  screenSizeX/2;screenSizeY
alias righthalf     move screenOriginX+screenSizeX/2;screenOriginY    screenSizeX/2;screenSizeY
alias rightmost     move screenOriginX+screenSizeX*0.4;screenOriginY  screenSizeX*0.6;screenSizeY
alias rightless     move screenOriginX+screenSizeX*0.6;screenOriginY  screenSizeX*0.4;screenSizeY
alias leftmost      move screenOriginX;screenOriginY                  screenSizeX*0.6;screenSizeY
alias leftless      move screenOriginX;screenOriginY                  screenSizeX*0.4;screenSizeY

# Concrete positions
alias 0-full        move screenOriginX;screenOriginY screenSizeX;screenSizeY                         ${mon-laptop}
alias 0-left        move screenOriginX;screenOriginY screenSizeX/2;screenSizeY                       ${mon-laptop}
alias 0-right       move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY         ${mon-laptop}
alias 1-full        move screenOriginX;screenOriginY screenSizeX;screenSizeY                         ${mon-external-1}
alias 1-left        move screenOriginX;screenOriginY screenSizeX/2;screenSizeY                       ${mon-external-1}
alias 1-right       move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY         ${mon-external-1}
alias 2-full        move screenOriginX;screenOriginY screenSizeX;screenSizeY                         ${mon-external-2}
alias 2-left        move screenOriginX;screenOriginY screenSizeX/2;screenSizeY                       ${mon-external-2}
alias 2-right       move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/2;screenSizeY         ${mon-external-2}

# Numpad location Bindings
bind pad0 ${showNormalHint}
bind pad1 ${leftless}
bind pad2 push bottom bar-resize:screenSizeY/2
bind pad3 ${rightless}
bind pad4 ${lefthalf}
bind pad5 ${full}
bind pad6 ${righthalf}
bind pad7 ${leftmost}
bind pad8 push top bar-resize:screenSizeY/2
bind pad9 ${rightmost}
bind padEnter grid padding:5 ${mon-laptop}:6,2 ${mon-external-1}:6,2 ${mon-external-2}:6,2
bind pad+ throw next
bind pad. focus behind
bind pad/ activate-snapshot 1monitors
bind pad/:ctrl snapshot 1monitors save-to-disk
bind pad* activate-snapshot 3monitors
bind pad*:ctrl snapshot 3monitors save-to-disk
# bind pad/ layout 1monitor

bind e:cmd  ${showNormalHint}

# ======================================
# The HYPER key
# ======================================

alias hyper f19

# Location bindings
bind down:${hyper}     throw next
bind right:${hyper}    ${righthalf}
bind left:${hyper}     ${lefthalf}
bind up:${hyper}       ${full}

# App bindings
bind b:${hyper} focus ${browser}
bind e:${hyper} focus ${editor}
bind g:${hyper} focus 'GitHub'
bind m:${hyper} focus 'Mail'
bind h:${hyper} focus 'HipChat'
bind c:${hyper} focus 'Calendar'
bind t:${hyper} focus 'Terminal'
bind f:${hyper} focus 'Path Finder'
bind s:${hyper} focus 'Spotify'
